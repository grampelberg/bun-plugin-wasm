{
  "name": "@grampelberg/bun-plugin-wasm",
  "version": "0.1.1",
  "workspaces": [
    "demo",
    "rust/pkg"
  ],
  "module": "src/lib.ts",
  "scripts": {
    "dep:check": "depcheck",
    "format:check": "biome format && just --fmt --unstable --check",
    "lint:check": "biome lint --error-on-warnings && tsc --noEmit",
    "lint:fix": "biome lint --fix --error-on-warnings",
    "test": "bun test",
    "test:dev": "bun test --watch",
    "test:fast": "bun test --watch -t '^(?!.*slow).*'"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "latest",
    "depcheck": "^1.4.7",
    "puppeteer": "^24.22.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "demo": "workspace:*",
    "bun-wasm-demo": "workspace:*",
    "diff": "^8.0.2",
    "tslog": "^4.9.3"
  }
}
